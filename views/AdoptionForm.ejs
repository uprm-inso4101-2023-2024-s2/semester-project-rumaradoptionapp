<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pet Adoption Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .form-container {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            max-width: 400px;
            width: 100%;
            margin-top: 10px;
        }

        .form-container h1 {
            text-align: center;
            margin-bottom: 10px;
            font-size: 24px;
        }

        .form-group {
            margin-bottom: 0px;
        }

        .form-group label {
            font-weight: bold;
            display: block;
            margin-bottom: 0px;
        }

        .form-group input[type="text"],
        .form-group select {
            width: 100%;
            padding: 6px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }

        .form-group select {
            appearance: none;
            -webkit-appearance: none;
            background-image: url("data:image/svg+xml,%3Csvg width='10' height='7' viewBox='0 0 10 7' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M5 7L9.35429 0.646447C9.44072 0.55902 9.49968 0.448826 9.52607 0.331446C9.55246 0.214066 9.54518 0.0937004 9.50488 -0.0222419C9.46459 -0.137184 9.39356 -0.241984 9.30014 -0.320373C9.20671 -0.398763 9.09578 -0.447309 8.97799 -0.460994C8.86021 -0.474678 8.74086 -0.452049 8.63309 -0.395162L5 2.93333L1.36691 -0.395162C1.25914 -0.452049 1.13979 -0.474678 1.02201 -0.460994C0.904219 -0.447309 0.793287 -0.398763 0.699852 -0.320373C0.606416 -0.241984 0.535383 -0.137184 0.495086 -0.0222419C0.454789 0.0937004 0.447509 0.214066 0.473901 0.331446C0.500292 0.448826 0.559252 0.55902 0.645691 0.646447L5 7Z' fill='%23232323'/%3E%3C/svg%3E");
            background-repeat: no-repeat;
            background-position: right 10px top 50%;
            padding-right: 40px;
        }

        .submit-btn {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #4CAF50;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

        .submit-btn:hover {
            background-color: #45a049;
        }

        .clear-btn {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #4CAF50;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

        .clear-btn:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h1>Pet Adoption Form</h1>

        <form id="AdoptionForm" action="/fillForm" method="post">
            <div class="form-group">
                <label for="address">Home_Address:</label>
                <input type="text" id="address" name="address" placeholder="Enter your Home Adress" required autocomplete="off" class="green-text">
            </div>
            <br>
            <div class="form-group">
                <label for="housing_type">Housing Type:</label>
                <select name="housing_type" id="housing_type" required class="green-text">
                    <option disabled selected value="">Select Housing Type</option>
                    <option value="House">House</option>
                    <option value="Apartment">Apartment</option>
                  </select>
            </div>
            <br>
            <div class="form-group">
                <label for="neighborhood_description">Neighborhood Description:</label>
                
                <textarea id="neighborhood_description" name="neighborhood_description" rows="3" cols="40" required class="green-text" placeholder="Enter the information here "></textarea>
            </div>
            <br>
            <div class="form-group">
                <label for="people_house">Number of people that lives in the house:</label>
                <input type="number" id="people_house" name="people_house" placeholder="Enter the amount" required autocomplete="off" class="green-text">
            </div>
            <br>
            <div class="form-group">
                <label for="num_pets">Number Of Pets Owned:</label>
                <input type="number" id="num_pets" name="num_pets" placeholder="Enter the amount" required class="green-text" onchange="toggleOwnedPetsDescription()">
            </div>
            <br>
            <div class="form-group">
                <label for="type_pets">Owned Pets Description (If applicable):</label>
                <textarea id="type_pets" name="type_pets" rows="3" cols="40"  class="green-text" placeholder="Give a brief description about the owned pets "></textarea>
            </div>
            <br>
            <div class="form-group">
                <label for="adoption_reason">Reason for Adoption:</label>
                
                <textarea id="adoption_reason" name="adoption_reason" rows="3" cols="40" required class="green-text" placeholder="Write the reason for adoption of the pet"></textarea>
            </div>
            <br>
            <div class="form-group">
                <label for="pet_location">Where the pet will be living:</label>
                <select name="pet_location" id="pet_location" required class="green-text">
                    <option disabled selected value="">Select Location</option>
                    <option value="Indoor">Indoor</option>
                    <option value="Backyard">Backyard</option>
                    <option value="Both">Both</option>
                  </select>
            </div>
            <br>
            <button type="submit" class="submit-btn">Submit</button>
            <br>
            <button onclick="clearFields()" class="clear-btn">Clear</button>
        </form>
    </div>

    <script>

        function clearFields(){

            document.getElementById("address").value=""
            document.getElementById("housing_type").selectedIndex = ""
            document.getElementById("neighborhood_description").value =""
            document.getElementById("people_house").value = ""
            document.getElementById("num_pets").value=""
            document.getElementById("type_pets").value=""
            document.getElementById("adoption_reason").value=""
            document.getElementById("pet_location").selectedIndex = ""
        }


        function toggleOwnedPetsDescription() {
            var numPets = document.getElementById('num_pets');

            if (numPets.value> 0) {
                document.getElementById('type_pets').setAttribute('required', 'required');
            } else {
                document.getElementById('type_pets').removeAttribute('required');
            }
        }

        function redirect(){
            window.location.href = "/";
        }


        document.getElementById('AdoptionForm').addEventListener('submit', async function(event) {
            event.preventDefault();

            const formData = {
            address: document.getElementById('address').value,
            housing_type: document.getElementById('housing_type').value,
            neighborhood_description: document.getElementById('neighborhood_description').value,
            people_house: document.getElementById('people_house').value,
            num_pets: document.getElementById('num_pets').value,
            type_pets: document.getElementById('type_pets').value,
            adoption_reason: document.getElementById('adoption_reason').value,
            pet_location: document.getElementById('pet_location').value
        };
            try {
                const response = await fetch('/fillForm', {               
                    method: 'POST',
                    headers: {
                          'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData),
                });


                const data = await response.json();

                redirect()
        
            } catch (error) {
                console.error('Error:', error);
            }
        });


















    </script>
</body>
</html>
