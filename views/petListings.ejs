<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pet Listings</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            color: #333;
        }

        .section-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .section-header h2 {
            font-size: 2rem;
            font-weight: bold;
            color: #333;
        }

        .section-header p {
            font-size: 1.2rem;
            color: #666;
        }

        .filter-tabs {
            text-align: center;
            margin-bottom: 20px;
        }

        .tab {
            display: inline-block;
            margin: 0 15px;
            cursor: pointer;
            padding: 12px 20px;
            background-color: #eee;
            border-radius: 5px;
        }

        .tab.active {
            background-color: #67c36a;
            color: white;
        }

        .filter-dropdown select {
            padding: 10px;
            font-size: 1rem;
            border-radius: 5px;
        }

        .pet-listing {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }

        .pet-card {
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            padding: 30px; 
            width: 350px; 
            text-align: center;
            transition: transform 0.3s ease-in-out; 
        }

        .pet-card:hover {
            transform: scale(1.05); 
        }

        .pet-image img {
            width: 100%; 
            height: 200px; 
            object-fit: cover; 
            object-position: center; 
        }

        .pet-name {
            font-size: 1.5rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }

        .pet-details {
            font-size: 1rem;
            color: rgb(0, 0, 0);
            margin-bottom: 10px;
        }

        .view-details-btn {
            background-color: #67c36a;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .view-details-btn:hover {
            background-color: #45a049;
        }

        .font-poppins {
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="section-header">
            <h2>Pet Listings</h2>
            <p>Browse through our available pets ready for adoption.</p>
        </div>
        <div class="filter-tabs">
            <div class="tab active">All</div>
            <div class="tab">Dogs</div>
            <div class="tab">Cats</div>
            <div class="tab">Birds</div>
            <!-- Add more tabs as needed -->
        </div>
        <div class="filter-dropdown">
            <select id="gender-filter">
                <option value="">Select Gender</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
            <select id="age-filter">
                <option value="">Select Age</option>
                <option value="puppy">Puppy</option>
                <option value="adult">Adult</option>
                <option value="senior">Senior</option>
            </select>
        </div>
        <div class="pet-listing">
            <!-- Pet cards will be dynamically generated here -->
            <% pets.forEach(pet => { %>
                <div class="pet-card" data-size="<%= pet.size %>" data-age="<%= pet.age %>" data-gender="<%= pet.sex %>" data-type="<%= pet.species %>">
                    <div class="pet-image">
                        <% if (pet.image && pet.image.image_url) { %>
                            <img src="<%= pet.image.image_url %>" alt="Image of <%= pet.name %>" />
                        <% } else { %>
                            <!-- Display default image if there's no pet image -->
                            <img src="/NoPictureFoundPicture.jpg" alt="No picture found for <%= pet.name %>" />
                        <% } %>
                    </div>
                    <div class="pet-name"><%= pet.name %></div>
                    <div class="pet-details">Age: <%= pet.age %> | Breed: <%= pet.species %></div>
                    <a href="/petProfile/<%= pet.id %>" class="view-details-btn">View Details</a>
                </div>
            <% }); %>
        </div>
        
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const genderFilter = document.getElementById("gender-filter");
            const ageFilter = document.getElementById("age-filter");
            const petCards = document.querySelectorAll(".pet-card");

            genderFilter.addEventListener("change", filterPets);
            ageFilter.addEventListener("change", filterPets);

            function filterPets() {
                const selectedGender = genderFilter.value;
                const selectedAge = ageFilter.value;

                petCards.forEach((card) => {
                    const cardGender = card.dataset.gender;
                    const cardAge = card.dataset.age;

                    const showCard =
                        (!selectedGender || cardGender === selectedGender) &&
                        (!selectedAge || cardAge === selectedAge);

                    card.style.display = showCard ? "block" : "none";
                });
            }
        });
    </script>
</body>
</html>
